<p id="notice"><%= notice %></p>

<h1>Listing Workflow Events</h1>
<h4>Workflow state: <%= @workflow_state.state %></h4>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_events.each do |workflow_event| %>
      <tr>
        <td><%= workflow_event.event %></td>
        <td><%= link_to 'Show', workflow_state_workflow_event_path(@workflow_state, workflow_event) %></td>
        <td><%= link_to 'Edit', edit_workflow_state_workflow_event_path(@workflow_state, workflow_event) %></td>
        <td><%= link_to 'Destroy', workflow_state_workflow_event_path(@workflow_state, workflow_event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workflow event', new_workflow_state_workflow_event_path(@workflow_state) %>
<%= link_to 'Back', workflow_workflow_states_path(@workflow_state.workflow) %>