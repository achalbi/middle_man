<p id="notice"><%= notice %></p>

<h1>Listing Workflow States</h1>

<h4>Workflow: <%= @workflow.name %></h4>
<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_states.each do |workflow_state| %>
      <tr>
        <td><%= workflow_state.state %></td>
        <td><%= workflow_state.content %></td>
        <td><%= link_to 'Show', workflow_workflow_state_path(@workflow, workflow_state) %></td>
        <td><%= link_to 'Edit', edit_workflow_workflow_state_path(@workflow, workflow_state) %></td>
        <td><%= link_to 'Destroy', workflow_workflow_state_path(@workflow, workflow_state) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workflow state', new_workflow_workflow_state_path(@workflow) %>
<%= link_to 'Back', workflows_path(@workflow) %>