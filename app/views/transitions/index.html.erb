<p id="notice"><%= notice %></p>

<h1>Listing Transitions</h1>

<table>
  <thead>
    <tr>
      <th>Workflow state</th>
      <th>Workflow event</th>
      <th>Transition state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transitions.each do |transition| %>
      <tr>
        <td><%= transition.workflow_event.workflow_state.state %></td>
        <td><%= transition.workflow_event.event %></td>
        <td><%= transition.workflow_state.state %></td>
        <td><%= link_to 'Show', workflow_event_transition_path(@workflow_event , transition) %></td>
        <td><%= link_to 'Edit', edit_workflow_event_transition_path(@workflow_event,transition) %></td>
        <td><%= link_to 'Destroy', workflow_event_transition_path(@workflow_event , transition), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transition', new_workflow_event_transition_path(@workflow_event) %>
<%= link_to 'Back', workflow_state_workflow_event_path(@workflow_event.workflow_state, @workflow_event) %>
